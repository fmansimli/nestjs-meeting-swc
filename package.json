{
  "name": "nestjs-meeting-swc",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "git:cm": "git commit -m \"$npm_package_name ($npm_package_version) ## $(date) ## \"",
    "git": "git add . && yarn git:cm && git push origin master",
    "dev": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "typeorm": "NODE_ENV=development typeorm-ts-node-commonjs",
    "mig:create": "NODE_ENV=development typeorm-ts-node-commonjs migration:create ./src/migrations/$npm_config_name",
    "mig:generate": "NODE_ENV=development typeorm-ts-node-commonjs migration:generate ./src/migrations/$npm_config_name -d data-source.ts --pretty",
    "mig:run": "NODE_ENV=development typeorm-ts-node-commonjs migration:run  -d data-source.ts",
    "mig:revert": "NODE_ENV=development typeorm-ts-node-commonjs migration:revert  -d data-source.ts",
    "mig:show": "NODE_ENV=development typeorm-ts-node-commonjs migration:show  -d data-source.ts",
    "schema:sync": "NODE_ENV=development typeorm-ts-node-commonjs schema:sync",
    "schema:log": "NODE_ENV=development typeorm-ts-node-commonjs schema:log",
    "schema:drop": "NODE_ENV=development typeorm-ts-node-commonjs schema:drop -d data-source.ts",
    "schema:query": "NODE_ENV=development typeorm-ts-node-commonjs query $npm_config_query",
    "schema:cache:clear": "NODE_ENV=development typeorm-ts-node-commonjs cache:clear"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.9.3",
    "@swc/jest": "^0.2.37",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
